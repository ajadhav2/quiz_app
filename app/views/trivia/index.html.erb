<p id="notice"><%= notice %></p>

<h1>Trivia</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Category</th>
      <th>Option a</th>
      <th>Option b</th>
      <th>Option c</th>
      <th>Option d</th>
      <th>Option e</th>
      <th>Right answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trivia.each do |trivium| %>
      <tr>
        <td><%= trivium.question %></td>
        <td><%= trivium.category.try(:name) %></td>
        <td><%= trivium.option_a %></td>
        <td><%= trivium.option_b %></td>
        <td><%= trivium.option_c %></td>
        <td><%= trivium.option_d %></td>
        <td><%= trivium.option_e %></td>
        <td><%= trivium.right_answer %></td>
        <td><%= link_to 'Show', trivium %></td>
        <td><%= link_to 'Edit', edit_trivium_path(trivium) %></td>
        <td><%= link_to 'Destroy', trivium, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

